{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "./dir", "**/*.test"],
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "outDir": "./dir",
        "experimentalDecorators": true,
        "declaration": true,
    }
}
